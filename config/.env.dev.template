# Precog Development Environment Configuration
# =============================================
# Local development and experimentation
# Risk Level: LOW
#
# Usage:
#   cp config/.env.dev.template .env
#   source .env

PRECOG_ENV=dev

# Database (local PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=precog_dev
DB_USER=precog_dev_user
DB_PASSWORD=<dev_password>

# Connection Pool (small for development)
DB_POOL_MIN_CONN=2
DB_POOL_MAX_CONN=10

# API (use demo environment for development)
KALSHI_API_KEY=<your_api_key>
KALSHI_API_SECRET=<path_to_private_key>
KALSHI_BASE_URL=https://demo-api.kalshi.com

# Logging (verbose for debugging)
LOG_LEVEL=DEBUG
