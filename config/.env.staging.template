# Precog Staging Environment Configuration
# =========================================
# Pre-production validation and UAT
# Risk Level: MEDIUM
#
# Usage:
#   cp config/.env.staging.template .env
#   # Verify you're on staging database!
#   PRECOG_ENV=staging python scripts/validate_schema.py

PRECOG_ENV=staging

# Database (staging server)
# WARNING: This is shared across team - coordinate changes!
DB_HOST=staging.db.example.com
DB_PORT=5432
DB_NAME=precog_staging
DB_USER=precog_staging_user
DB_PASSWORD=<staging_password>

# Connection Pool (production-like)
DB_POOL_MIN_CONN=5
DB_POOL_MAX_CONN=25

# API (can use production API with paper trading)
KALSHI_API_KEY=<staging_api_key>
KALSHI_API_SECRET=<path_to_staging_private_key>
KALSHI_BASE_URL=https://demo-api.kalshi.com

# Logging (balanced)
LOG_LEVEL=INFO
